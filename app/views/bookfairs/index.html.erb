<h1>Listing bookfairs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Created by</th>
    <th>Updated by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookfairs.each do |bookfair| %>
  <tr>
    <td><%= bookfair.name %></td>
    <td><%= bookfair.start_date %></td>
    <td><%= bookfair.end_date %></td>
    <td><%= bookfair.created_by %></td>
    <td><%= bookfair.updated_by %></td>
    <td><%= link_to 'Show', bookfair %></td>
    <td><%= link_to 'Edit', edit_bookfair_path(bookfair) %></td>
    <td><%= link_to 'Destroy', bookfair, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

