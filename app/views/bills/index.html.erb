<h1>Listing bills</h1>

<table>
  <tr>
    <th>Date of billing</th>
    <th>Amount</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bills.each do |bill| %>
  <tr>
    <td><%= bill.date_of_billing %></td>
    <td><%= bill.grossamt %></td>
    <td><%= bill.quantity %></td>
    <td><%= bill.discount %></td>
    <td><%= bill.netamt %></td>
    <td><%= link_to 'Show', bill %></td>
    <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
    <td><%= link_to 'Destroy', bill, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

